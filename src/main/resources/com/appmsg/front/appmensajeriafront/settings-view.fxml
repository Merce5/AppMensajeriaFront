<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="16" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.appmsg.front.appmensajeriafront.ui.settings.SettingsController"
      styleClass="page">

    <padding>
        <Insets top="18" right="18" bottom="18" left="18"/>
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="10">
        <Button text="←" onAction="#onBack" styleClass="icon-button"/>
        <Label text="Ajustes" styleClass="page-title"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="statusLabel" styleClass="muted"/>
    </HBox>

    <!-- Card: Apariencia -->
    <VBox spacing="12" styleClass="card">
        <Label text="Apariencia" styleClass="section-title"/>

        <HBox alignment="CENTER_LEFT" spacing="12">
            <Label text="Modo oscuro" styleClass="label"/>
            <Region HBox.hgrow="ALWAYS"/>
            <CheckBox fx:id="darkModeCheck" styleClass="switch"/>
        </HBox>

        <HBox alignment="CENTER_LEFT" spacing="12">
            <Label text="Fondo del chat" styleClass="label"/>
            <Region HBox.hgrow="ALWAYS"/>
            <ComboBox fx:id="wallpaperCombo" prefWidth="320" styleClass="input"/>
            <Button text="Elegir…" onAction="#onChooseWallpaper" styleClass="secondary-button"/>
        </HBox>
    </VBox>

    <!-- Card: Perfil -->
    <VBox spacing="12" styleClass="card">
        <Label text="Perfil" styleClass="section-title"/>

        <VBox spacing="6">
            <Label text="Nombre" styleClass="muted"/>
            <TextField fx:id="displayNameField" promptText="Tu nombre" styleClass="input"/>
        </VBox>

        <VBox spacing="6">
            <Label text="Estado" styleClass="muted"/>
            <TextField fx:id="statusField" promptText="Disponible" styleClass="input"/>
        </VBox>

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Guardar" onAction="#onSave" styleClass="primary-button"/>
        </HBox>
    </VBox>
</VBox>

